<Window x:Class="SynoCamWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="171" Width="525" Topmost="True" AllowsTransparency="True" WindowStyle="None" Background="Transparent" Loaded="Window_Loaded" ResizeMode="CanResizeWithGrip" MouseEnter="Window_MouseEnter" MouseLeave="Window_MouseLeave">
    <Grid>
        <ItemsControl Background="Black" x:Name="CamPanel" ItemsSource="{Binding CameraViews, Mode=OneWay}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"></StackPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding Url, IsAsync=True}" MaxHeight="{Binding RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}, Path=ActualHeight}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <StackPanel HorizontalAlignment="Right"  x:Name="ControlPanel" Orientation="Vertical" Width="15" Background="Transparent">
            <Button x:Name="CloseButton" Visibility="Hidden" Background="Black" Foreground="White" BorderThickness="0" Opacity="0.7">X</Button>
            <Button x:Name="MinimizeButton" Visibility="Hidden" Background="Black" Foreground="White" BorderThickness="0" Opacity="0.7">-</Button>
            <Button x:Name="RefreshButton" Visibility="Hidden" Background="Black" Foreground="White" BorderThickness="0" Opacity="0.7">R</Button>
        </StackPanel>
    </Grid>
</Window>
